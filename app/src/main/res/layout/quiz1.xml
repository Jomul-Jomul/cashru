<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/img_Quiz1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/quiz1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_Quiz1"
            android:text="이곳 소래염전 지역은 1934~1936년에 조성되었으며 갯골을 중심으로 145만평 정도가 펼쳐져 있습니다. 당시 이곳 소래염전에서 생산되는 대부분의 소금은 수인선과 경부선 열차로 부산항에 옮겨진 후, 일본으로 반출되었던 우리민족사의 아픔을 간직한 곳이기도 합니다. 이 지역은 어디일까요?"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 천문관"
            android:id="@+id/btn_Quiz1_1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 관곡지"
            android:id="@+id/btn_Quiz1_2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 갯골생태공원"
            android:id="@+id/btn_Quiz1_3"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 오이도선사유적공원"
            android:id="@+id/btn_Quiz1_4"/>

    </LinearLayout>

</LinearLayout>